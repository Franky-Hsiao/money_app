<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MoneyFragment">

    <LinearLayout
        android:id="@+id/layoutDatePicker3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDatePicker3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/date_addPage"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/selectedDateTextView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:onClick="showDatePicker2"
            android:text="Select Date"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDatePicker4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDatePicker4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/to_addPage"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/selectedDateTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:onClick="showDatePicker2"
            android:text="Select Date"
            android:textSize="20sp" />
    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/secondPieChart"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

</LinearLayout>
</ScrollView>